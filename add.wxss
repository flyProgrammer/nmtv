.bind{
    width: 80%;
    margin: 0 auto;
    background-color: #fff;
    border: 1px solid #f5f5f5;
    border-radius: 6px;
}
.flex{
    display: flex;
    flex-direction: row;
    margin: 0.6rem 0.1rem;
    border-bottom: 1px solid #f5f5f5;
}
.flex image{
    width: 7rem;
    height: 7rem;
}
.left{
    margin-right: 3%;
}

.txt{
    width: 92%;
    margin: 0 auto;
    font-size: 0.90rem;
}
.in{
    width: 92%;
    margin: 0.3rem auto;
    background-color: #fafafa;
    border:1px solid #f5f5f5;
}
.num{
    width: 75%;
    float: left;
}
.num input{
    height: 1.2rem;
    line-height: 1.2rem;
    text-align: center;
    font-size: 0.70rem;
    color: #999;
}
.scan{
    width: 25%;
    float: left;
    height: 1.2rem;
    line-height: 1.2rem;
    text-align: center;
    font-size: 0.70rem;
    color: #999;
}
.scan_left{
    width: 40%;
    float: left;
}
.scan_right{
    width: 60%;
    float: left;
}
.scan_left image{
    margin-top: 0.2rem;
    width: 1.0rem;
    height: 1.0rem;
}

.alert{
    margin-top: 1.0rem;
    width: 100%;
    display: flex;
    flex-direction: row;
    height: 2.0rem;
    line-height: 2.0rem;
    text-align: center;
    letter-spacing: 3px;
}
.cancel{
    width: 50%;
    border-top:1px solid #f5f5f5; 
    border-right:1px solid #f5f5f5; 
}
.atonce{
    width: 49.89%;
    border-top:1px solid #f5f5f5; 
}