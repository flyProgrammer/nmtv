/*选中地址时的状态*/

.active {
  width: 85%;
  float: left;
  min-height: 3.50rem;
  background-color: #fafafa;
  border: 1px solid #fa3137;
}

/*新增客户样式*/

#icon1 {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0px;
  background: rgba(0, 0, 0, 0.4);
  overflow: hidden;
}

.bind1 {
  width: 80%;
  margin: 0 auto;
  background-color: #fff;
  border: 1px solid #f5f5f5;
  border-radius: 6px;
}

.flex {
  display: flex;
  flex-direction: row;
  margin: 13rpx 4rpx;
}

.left,.right{
  border: 2px solid #e2e2e2;
  border-radius: 5px;
}

.flex image {
  width: 260rpx;
  height: 300rpx;
}

.left{
  margin-right: 2%;
}


.left1{
  margin-right: 3%;
  
}

