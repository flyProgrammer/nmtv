/*选择并订购*/

.order {
  width: 96%;
  margin: 0 auto;
  text-align: center;
}

.choose {
  display: flex;
  flex-direction: row;
  margin-left: 65rpx;
}

.choose text {
  display: inline;
  padding-top: 20rpx;
  padding-right: 20rpx;
}

.choose input {
  margin-top: 16rpx;
}

.month {
  padding: 4rpx 40rpx;
  background-color: #fff;
  height: 24rpx;
  border: 1px solid #ccc;
}

.choose image {
  margin: 20rpx 12rpx 8rpx 12rpx;
  width: 40rpx;
  height: 40rpx;
}

.confirm {
  width: 96%;
  margin: 0 auto;
  font-size: 30rpx;
  text-align: center;
}

.bind, .unbind {
  margin-top: 24rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 8px;
}

.bind {
  background-color: #7090dc;
  color: #fff;
}


