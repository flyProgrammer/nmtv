/* 温馨提示*/

page {
  background-color: #f5f5f5;
}

.txt {
  width: 92%;
  margin: 20rpx auto;
}

.tips {
  font-size: 22rpx;
  color: #999;
  line-height: 32rpx;
}

.sel-pay {
  display: flex;
  flex-direction: column;
  width: 100%;
  background-color: #fff;
  margin-top: 20rpx;
}

.account, .type, .business {
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #f5f5f5;
  width: 100%;
  height: 80rpx;
}

.item1 {
  margin-left: 4%;
  width: 45%;
  font-size: 26rpx;
  color: #999;
  height: 80rpx;
  line-height: 80rpx;
}

.item2,.item21 {
  margin-right: 4%;
  width: 47%; 
  font-size: 26rpx;
  color: #999;
  min-height: 80rpx;
  line-height: 80rpx;
  display:flex;
  flex-direction:row;
  justify-content:flex-end;
}

.item2{
  text-align: right;
  overflow: hidden;
}

.dz {
  margin-left: 4%;
  width: 35%;
  word-break: break-all;
  white-space: pre-wrap;
  font-size: 26rpx;
  color: #999;
  min-height: 120rpx;
  line-height: 120rpx;
}

.item4 {
  margin-right: 4%;
  width: 57%;
  font-size: 26rpx;
  color: #999;
  min-height: 80rpx;
  line-height: 80rpx;
  justify-content:flex-end;
}

