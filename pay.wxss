.atd {
  margin-left: 4%;
  width: 92%;
  font-size: 26rpx;
  text-align: center;
  color: #999;
  height: 80rpx;
  line-height: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.now image {
  width: 40rpx;
  height: 40rpx;
  margin-left: 45%;
}

.customer {
  display: flex;
  flex-direction: column;
  width: 100%;
  background-color: #fff;
  margin-top: 20rpx;
}

.times {
  margin-top: 20rpx;
  width: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: row;
}

.item5 {
  display: flex;
  flex-direction: row;
  margin-right: 4%;
  width: 57%;
  font-size: 26rpx;
  color: #999;
  min-height: 80rpx;
  line-height: 80rpx;
}

.row1, .row3 {
  width: 20%;
  margin-left: 5%;
}

.row1 image, .row3 image {
  width: 30rpx;
  height: 30rpx;
}

.row2 {
  width: 30%;
}

.row4 {
  width: 20%;
}

input {
  border: 1px solid #b2b2b2;
  font-size: 26rpx;
  padding: 0;
  color: #999;
  text-align: center;
}

.go {
  width: 92%;
  height: 80rpx;
  line-height: 80rpx;
  margin: 50rpx auto;
  background-color: #7090dc;
  font-size: 32rpx;
  color: #fff;
  text-align: center;
  border-radius: 5px;
}
